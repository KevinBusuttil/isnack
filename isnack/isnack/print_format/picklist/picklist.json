 "html": "<style>\n  @media print {\n    @page {\n      size: A4;\n      margin: 15mm 10mm 15mm 10mm;\n    }\n  }\n  \n  .picklist-print {\n    font-family: \"Helvetica Neue\", Helvetica, Arial, sans-serif;\n    font-size: 10pt;\n    color: #000;\n    line-height: 1.3;\n    max-width: 100%;\n  }\n  \n  .picklist-print h2 {\n    margin: 0 0 6px 0;\n    font-size: 16pt;\n    font-weight: bold;\n    border-bottom: 2px solid #000;\n    padding-bottom: 4px;\n  }\n  \n  .picklist-meta {\n    margin-bottom: 10px;\n  }\n  \n  .picklist-meta td {\n    padding: 2px 6px;\n    vertical-align: top;\n    font-size: 10pt;\n  }\n  \n  .picklist-section-title {\n    margin-top: 12px;\n    margin-bottom: 4px;\n    font-weight: bold;\n    text-transform: uppercase;\n    font-size: 11pt;\n    border-bottom: 1px solid #000;\n    padding-bottom: 2px;\n  }\n  \n  table.picklist-table {\n    width: 100%;\n    border-collapse: collapse;\n    margin-top: 4px;\n  }\n  \n  table.picklist-table th,\n  table.picklist-table td {\n    border: 1px solid #000;\n    padding: 4px 3px;\n    font-size: 10pt;\n  }\n  \n  table.picklist-table th {\n    text-align: left;\n    font-weight: bold;\n    background-color: #f0f0f0;\n  }\n  \n  .text-right {\n    text-align: right;\n  }\n  \n  .text-center {\n    text-align: center;\n  }\n  \n  .muted {\n    color: #666;\n    font-size: 9pt;\n    font-style: italic;\n  }\n  \n  .signature-row td {\n    padding-top: 30px;\n    font-size: 10pt;\n    border: none;\n  }\n  \n  .wo-info {\n    padding: 3px 6px;\n    font-size: 10pt;\n  }\n</style>\n\n<div class=\"picklist-print\">\n\n  {# --- Header --- #}\n  <h2>Picklist</h2>\n\n  <table class=\"picklist-meta\">\n    <tr>\n      <td style=\"width: 20%;\"><b>Picklist No:</b></td>\n      <td style=\"width: 30%;\">{{ doc.name }}</td>\n      <td style=\"width: 15%;\"><b>Date:</b></td>\n      <td style=\"width: 35%;\">{{ frappe.utils.formatdate(doc.posting_date or doc.creation) }}</td>\n    </tr>\n    <tr>\n      <td><b>Company:</b></td>\n      <td>{{ doc.company }}</td>\n      <td><b>Printed On:</b></td>\n      <td>{{ frappe.utils.format_datetime(frappe.utils.now()) }}</td>\n    </tr>\n    <tr>\n      <td><b>From Whse:</b></td>\n      <td>{{ doc.from_warehouse or '' }}</td>\n      <td><b>To Whse:</b></td>\n      <td>{{ doc.to_warehouse or '' }}</td>\n    </tr>\n  </table>\n\n  {# --- Work Orders Section --- #}\n  {% set work_orders = {} %}\n  {% if doc.transfers %}\n    {% for t in doc.transfers %}\n      {% if t.stock_entry %}\n        {% set se = frappe.get_doc(\"Stock Entry\", t.stock_entry) %}\n        {% if se.work_order %}\n          {% set wo = frappe.get_doc(\"Work Order\", se.work_order) %}\n          {% set _ = work_orders.update({se.work_order: wo}) %}\n        {% endif %}\n      {% endif %}\n    {% endfor %}\n  {% endif %}\n\n  {% if work_orders %}\n    <div class=\"picklist-section-title\">Work Order Information</div>\n    <table class=\"picklist-table\">\n      <thead>\n        <tr>\n          <th style=\"width: 8%;\">#</th>\n          <th style=\"width: 30%;\">Work Order</th>\n          <th style=\"width: 25%;\">Item Code</th>\n          <th>Item Name</th>\n        </tr>\n      </thead>\n      <tbody>\n        {% for wo_name, wo in work_orders.items() %}\n        <tr>\n          <td class=\"text-center\">{{ loop.index }}</td>\n          <td>{{ wo_name }}</td>\n          <td>{{ wo.production_item }}</td>\n          <td>{{ wo.item_name or '' }}</td>\n        </tr>\n        {% endfor %}\n      </tbody>\n    </table>\n  {% endif %}\n\n  {# --- Transfers included --- #}\n  <div class=\"picklist-section-title\">Stock Entries</div>\n  {% if doc.transfers %}\n    <table class=\"picklist-table\">\n      <thead>\n        <tr>\n          <th style=\"width: 8%;\">#</th>\n          <th>Stock Entry</th>\n        </tr>\n      </thead>\n      <tbody>\n        {% for t in doc.transfers %}\n        <tr>\n          <td class=\"text-center\">{{ loop.index }}</td>\n          <td>{{ t.stock_entry }}</td>\n        </tr>\n        {% endfor %}\n      </tbody>\n    </table>\n  {% else %}\n    <div class=\"muted\">No stock entries linked to this picklist.</div>\n  {% endif %}\n\n  {# --- Items to pick --- #}\n  <div class=\"picklist-section-title\">Items to Pick</div>\n\n  {% set items = doc.items | sort(attribute='from_warehouse') %}\n\n  {% if items %}\n    <table class=\"picklist-table\">\n      <thead>\n        <tr>\n          <th style=\"width: 3%;\">#</th>\n          <th style=\"width: 13%;\">Item Code</th>\n          <th style=\"width: 22%;\">Item Name</th>\n          <th style=\"width: 9%;\">Batch</th>\n          <th style=\"width: 12%;\">From</th>\n          <th style=\"width: 12%;\">To</th>\n          <th style=\"width: 8%;\">Qty</th>\n          <th style=\"width: 6%;\">UOM</th>\n          <th style=\"width: 5%;\">&#x2713;</th>\n        </tr>\n      </thead>\n      <tbody>\n        {% for row in items %}\n        <tr>\n          <td class=\"text-center\">{{ loop.index }}</td>\n          <td style=\"font-size: 9pt;\">{{ row.item_code }}</td>\n          <td style=\"font-size: 9pt;\">{{ row.get(\"item_name\") or \"\" }}</td>\n          <td style=\"font-size: 9pt;\">{{ row.get(\"batch_no\") or \"\" }}</td>\n          <td style=\"font-size: 8pt;\">{{ (row.get(\"from_warehouse\") or doc.from_warehouse or \"\") | replace(\"Isnack - \", \"\") | replace(\" - IS\", \"\") }}</td>\n          <td style=\"font-size: 8pt;\">{{ (row.get(\"to_warehouse\") or doc.to_warehouse or \"\") | replace(\"Isnack - \", \"\") | replace(\" - IS\", \"\") }}</td>\n          <td class=\"text-right\">\n            {% if row.get(\"qty\") %}\n              {{ \"%.2f\" % (row.qty or 0) }}\n            {% endif %}\n          </td>\n          <td class=\"text-center\" style=\"font-size: 9pt;\">{{ row.get(\"uom\") or \"\" }}</td>\n          <td class=\"text-center\"></td>\n        </tr>\n        {% endfor %}\n      </tbody>\n    </table>\n  {% else %}\n    <div class=\"muted\">No items on this picklist.</div>\n  {% endif %}\n\n  {# --- Signatures --- #}\n  <table style=\"width: 100%; margin-top: 20px;\">\n    <tr class=\"signature-row\">\n      <td style=\"width: 33%;\">Picker: ____________________________</td>\n      <td style=\"width: 33%;\">Checked By: ________________________</td>\n      <td style=\"width: 34%;\">Date: ______________________________</td>\n    </tr>\n  </table>\n\n</div>\n",
